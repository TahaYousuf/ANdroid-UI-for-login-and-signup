<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/background_page" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@drawable/grey_top_cornered_backgroud"
        android:orientation="vertical"
        android:padding="32dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="131dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textsize= "40sp"
            android:text="Email" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@drawable/edit_text_white"
            android:inputType="textPersonName"
            android:textColorHint="#8e8e8e"
            android:text="Name"
            android:textsize="18dp"
            android:inputType="textPersonName"
            android:hint="example@gmail.com"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textsize= "40sp"
            android:text="TextPassword"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="Foeget Your password ? recovery "
            android:textAllignment="viewStart"
            android:textColor="#4d4d4d"
            android:layout_marginTop="24dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            >
            <View
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#4d4d4d"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="TextView" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Google"
                style="@android:style?widjet.Button"
                android:textColor="#1704A1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:drawableStart="@drawable/google"
                android:background="@drawable/social_border_button"
                android:drawablePadding="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"

                />
            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Facebook"
                style="@android:style?widjet.Button"
                android:textColor="#1704A1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:drawableStart="@drawable/google"
                android:background="@drawable/social_border_button"
                android:drawablePadding="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"

                />


        </LinearLayout>

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@android:style?widjet.Button"
            android:layout_marginTop="16dp"
            android:background="@drawable/red_button_background"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"

            android:text="Login" />


    </LinearLayout>
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#4d4d4d"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:layout_constraintBottom_toTopOf="@id/linearLayout"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="@id/imagesView3"



        android:layout_marginEnd="8dp"
        android:text="Login To Account" />


</androidx.constraintlayout.widget.ConstraintLayout>