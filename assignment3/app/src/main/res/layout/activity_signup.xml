<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/background_page" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@drawable/grey_top_cornered_backgroud"
        android:orientation="vertical"
        android:padding="32dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="131dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textsize="40sp" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_white"
            android:ems="10"
            android:hint="example@gmail.com"
            android:inputType="textPersonName"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:text="Name"
            android:textColor="#8e8e8e"
            android:textColorHint="#8e8e8e"
            android:textsize="18dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:text="TextPassword"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textsize="40sp" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_white"
            android:ems="10"
            android:hint="example@gmail.com"
            android:inputType="textPersonName"
            android:inputType="textPassword"
            android:padding="8dp"
            android:text="Password"
            android:textColor="#8e8e8e"
            android:textColorHint="#8e8e8e"
            android:textsize="18dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Foeget Your password ? recovery "
            android:textAllignment="viewStart"
            android:textColor="#000000"
            android:textColor="#4d4d4d"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button4"
            style="@android:style?widjet.Button"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:background="@drawable/red_button_background"
            android:backgroundTint="@color/white"
            android:text="Signup"
            android:textColor="@android:color/holo_green_dark"

            android:textSize="34sp"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_constraintBottom_toTopOf="@id/linearLayout"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="@id/imagesView3"
        android:layout_weight="1"
        android:text="Login To Account"
        android:textColor="#4d4d4d"


        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="70dp" />


</androidx.constraintlayout.widget.ConstraintLayout>